{
  "arrowParens": "always",
  "printWidth": 100,
  "semi": false,
  "trailingComma": "none",
  "jsxSingleQuote": true,
  "singleQuote": true,
  "useTabs": true,
  "tabWidth": 2,
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "^~src/app",
    "^~src/processes",
    "^~src/pages",
    "^~src/widgets",
    "^~src/features",
    "^~src/entities",
    "^~src/shared",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrderGroupNamespaceSpecifiers": true,
  "importOrderCaseInsensitive": true
}